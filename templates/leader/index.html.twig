{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ controller_name }}</h1>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    {#                <th>Id</th>#}
                    <th scope="col">Фото</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Страна</th>
                    <th scope="col">Действия</th>
                </tr>
                </thead>
                <tbody>
                {% for leader in leaders %}
                    <tr>
                        {#                    <td>{{ leader.id }}</td>#}
                        <td><img src="{{ asset('images/leaders/' ~ leader.image) }}" class="img-fluid"></td>
                        <td>{{ leader.name }}</td>
                        <td>{{ leader.country }}</td>
                        <td>
                            <a href="{{ path('leader_show', {'id': leader.id}) }}">show</a>
                            <a href="{{ path('leader_edit', {'id': leader.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{ path('leader_new') }}">Создать нового</a>
    </div>
{% endblock %}
